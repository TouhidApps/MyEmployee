<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.touhidapps.myemployee.NewEmployee"
    tools:showIn="@layout/activity_new_employee">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Name: "
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/editText_empName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Employee Name" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Phone: "
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/editText_empPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Employee Phone"
                    android:inputType="phone" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Type: "
                    android:textSize="20dp" />

                <Spinner
                    android:id="@+id/spinner_userType"
                    android:layout_width="wrap_content"
                    android:layout_height="42dp"
                    android:background="@android:drawable/btn_dropdown"
                    android:spinnerMode="dropdown">

                </Spinner>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Address: "
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/editText_empAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Address" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="District: "
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/editText_empDistrict"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="District" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Department: "
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/button_addDepartment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+" />

                <Spinner
                    android:id="@+id/spinner_userDepartment"
                    android:layout_width="wrap_content"
                    android:layout_height="42dp"
                    android:background="@android:drawable/btn_dropdown"
                    android:spinnerMode="dropdown">

                </Spinner>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Designation: "
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/button_addDesignation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+" />

                <Spinner
                    android:id="@+id/spinner_userDesignation"
                    android:layout_width="wrap_content"
                    android:layout_height="42dp"
                    android:background="@android:drawable/btn_dropdown"
                    android:spinnerMode="dropdown">

                </Spinner>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Education: "
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/editText_empEducation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Education" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Nominees: "
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/editText_empNominees"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nominees" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Job History: "
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/editText_empJobHistory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Job History" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Joining Date: "
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/editText_empJoiningDate"
                    android:inputType="date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Joining Date" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Enable/Disable: "
                    android:textSize="20dp" />

                <Spinner
                    android:id="@+id/spinner_empEnableDisable"
                    android:layout_width="wrap_content"
                    android:layout_height="42dp"
                    android:background="@android:drawable/btn_dropdown"
                    android:spinnerMode="dropdown">

                </Spinner>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="User Name: "
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/editText_empUserName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Unique Login User Name" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Password: "
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/editText_empPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Password"
                    android:inputType="textVisiblePassword" />

            </LinearLayout>


            <Button
                android:id="@+id/button_saveNewEmployee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Save" />


        </LinearLayout>
    </ScrollView>


</LinearLayout>
